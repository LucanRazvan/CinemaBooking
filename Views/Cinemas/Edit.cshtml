@model CinemaBooking.Models.DBObjects.Cinema

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="background"></div>
<div class="tile">

    <h1 style="position:absolute;left:50%;transform:translate(-50%,0);color:white">Edit</h1>
    <br /><br />

<div class="row">
    <div class="col-md-4">
            <section style="position:absolute;top:50%;left:50%;transform:translate(-50%,-50%);width:50%">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="CinemaId" class="form-control" hidden />
            </div>
            <div class="form-group">
                        <label asp-for="Name" class="form-label" style="color:white"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <label asp-for="Address" class="form-label" style="color:white"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <label asp-for="City" class="form-label" style="color:white"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary buton_log_in" style="left:50%;position:relative;transform:translate(-50%,0)" />
            </div>
        </form>
        </section>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
