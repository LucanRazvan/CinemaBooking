@model CinemaBooking.Models.DBObjects.Movie

@{
    ViewData["Title"] = "AddToWatchList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="background"></div>
<div class="tile" style="height:90%;top:10%">

    <h1 style="position:absolute;left:50%;transform:translate(-50%,0);color:white">Add To WatchList</h1>
    <br /><br />
    <div style="top:15%;left:50%;transform:translate(-50%,0);position:absolute;width:100%;height:70%">

        <dl class="row" style="width:90%;position:fixed;left:50%;transform:translate(-50%,0)">
            <dd class="col-sm-2">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dd class="col-sm-4">
                <img src="@Model.ImgURL" />
            </dd>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DurationMinutes)
            </dt>
            <dd class="col-sm-10" style="text-align:center">
                @Html.DisplayFor(model => model.DurationMinutes)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </dt>
            <dd class="col-sm-10" style="text-align:center">
                @Html.DisplayFor(model => model.ReleaseDate)
            </dd>
    </dl>
</div>
<form asp-action="AddToWatchList">
    <input hidden value="@ViewBag.UserID"/>
    <input hidden id="MovieID" name="MovieID" value="@ViewBag.MovieID" />
        <input class="btn btn-primary buton_log_in" style="position:fixed;bottom:10%;left:50%;transform:translate(-50%,0)" type="submit" value="Add to watchlist" />
</form>
</div>