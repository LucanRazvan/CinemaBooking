@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="buton_nav" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="margin-right:2rem">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Movies", new { area = "" })">
            <button  type="submit" class="buton_nav_btn">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item" style="margin-right:2rem">
        <a class="buton_nav" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="buton_nav" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
