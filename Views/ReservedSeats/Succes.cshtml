@{
	ViewData["Title"] = "Succes";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
	<style>
		.text_succes{
			font-size:5rem;
			position:absolute;
			left:50%;
			top:50%;
			transform:translate(-50%,-50%);
			width:max-content;
			opacity:0;
			animation:fade_in 1s linear forwards;
			animation-iteration-count:1;
			animation-delay:6.2s;
			text-shadow: 0 0 10px white,0 0 30px green,0 0 40px green,0 0 50px green,0 0 60px green,0 0 70px green,0 0 80px green;
			color: white;
		}
		.btn_back{
			left:50%;
			position:absolute;
			top:70%;
			transform:translate(-50%,-50%);
			opacity:0;
			animation: fade_in 1s linear forwards;
			animation-iteration-count: 1;
			animation-delay: 6.2s;
			border-radius:2rem;
			padding:2rem;
			background-color:transparent;
			border:none;
			box-shadow:inset 0 0 2rem green;
			transition-duration:0.5s;
			color:white;
		}
		.btn_back:hover{
			box-shadow:inset 0 0 4rem green;
			color:white;
			cursor:pointer;
		}
		.video_background{
			position:absolute;
			left:0;
			top:0;
			width:100vw;
			height:100vh;
			object-fit:cover;
			z-index:-20;
		}
		@@keyframes fade_in{
			0%{
				opacity:0;
			}
			100%{
				opacity:1;
			}
		}
	</style>
</head>

<video src="~/succes_video.mp4" autoplay muted class="video_background" id="video_background"></video>
<p class="text_succes" id="text">Succesfull Reservation</p>
<a class="btn btn_back" id="button" asp-action="Index" asp-controller="Movies">Back to movies</a>
<a href="https://www.vecteezy.com/free-videos/green-tick-mark" style="z-index:20;bottom:10%;left:50%;transform:translate(-50%,0);position:absolute">Green Tick Mark Stock Videos by Vecteezy</a>

<script>
