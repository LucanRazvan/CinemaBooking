@model CinemaBooking.Models.DBObjects.Screening

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="background"></div>
<div class="tile">

    <h1 style="position:absolute;left:50%;transform:translate(-50%,0);color:white">Edit</h1>
    <br /><br />
<div class="row">
    <div class="col-md-4">
            <section style="position:absolute;left:50%;transform:translate(-50%,0);width:50%">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ScreeningId" />
            <div class="form-group">
                <input asp-for="MovieId" class="form-control" value="@ViewBag.MovieId" hidden/>
            </div>
            <div class="form-group">
                        <label asp-for="ScreeningTime" class="form-label" style="color:white"></label>
                <input asp-for="ScreeningTime" class="form-control" />
                <span asp-validation-for="ScreeningTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <label asp-for="Price" class="form-label" style="color:white"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <label class="form-label" style="color:white" for="CinemaName">Cinema Name:</label>
                <input class="form-control" type="text" id="CinemaName" name="CinemaName" required />
            </div>
            <div class="form-group">
                        <label class="form-label" style="color:white" for="HallNumber">Hall Number:</label>
                <input class="form-control" type="number" id="HallNumber" name="HallNumber" required />
            </div>
            <div class="form-group">
                <br />
                        <input type="submit" value="Save" class="btn btn-primary buton_log_in" style="left:50%;position:relative;transform:translate(-50%,0)" />
            </div>
        </form>
        </section>
    </div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
