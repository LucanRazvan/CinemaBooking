@model CinemaBooking.Models.DBObjects.Screening

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="background"></div>
<div class="tile" style="height:90%;top:10%">

    <h1 style="left:50%;transform:translate(-50%,0);position:absolute;color:white">Delete</h1>
    <br /><br />
    <h3 style="left:50%;transform:translate(-50%,0);position:absolute;color:white;width:max-content">Are you sure you want to delete this?</h3>
    <div style="top:15%;left:50%;transform:translate(-50%,0);position:absolute;width:80%;height:70%">
        <dl class="row" style="top:50%;width:70%;position:fixed;left:50%;transform:translate(-50%,-50%)">
            @if(Model!=null){
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ScreeningTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScreeningTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
                </dd>
            }
            else
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ScreeningTime)
                </dt>
                <dd class="col-sm-10">
                    
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                   
                </dd>
            }
    </dl>

        <form asp-action="Delete" style="position:fixed;bottom:-10%;left:40%;transform:translate(-50%,0)">
        <input type="hidden" asp-for="ScreeningId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
        <a class="btn buton_log_in" style="position:fixed;bottom:-10%;left:60%;transform:translate(-50%,0);color:white" asp-action="Index" asp-route-movieId="@ViewBag.MovieID">Back to Screenings</a>
</div>
</div>