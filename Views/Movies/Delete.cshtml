@model CinemaBooking.Models.DBObjects.Movie

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="background"></div>
<div class="tile" style="height:90%;top:10%">
    <h1 style="left:50%;transform:translate(-50%,0);position:absolute;color:white">Delete</h1>
    <br /><br />
    <h3 style="left:50%;transform:translate(-50%,0);position:absolute;color:white;width:max-content">Are you sure you want to delete this?</h3>
    <div style="top:15%;left:50%;transform:translate(-50%,0);position:absolute;width:100%;height:70%">
    <dl class="row" style="width:90%;position:fixed;left:50%;transform:translate(-50%,0)">
        @if(Model!=null){
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dd  class="col-sm-4">
            <img src="@Model.ImgURL"  />
        </dd>
        <dd class = "col-sm-6">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DurationMinutes)
        </dt>
        <dd class = "col-sm-10" style="text-align:center">
            @Html.DisplayFor(model => model.DurationMinutes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class = "col-sm-10" style="text-align:center">
            @Html.DisplayFor(model => model.ReleaseDate)
                </dd>
            }
            else
            {
                <dd class="col-sm-2">
                    
                </dd>
                <dd class="col-sm-4">
                   
                </dd>
                <dd class="col-sm-6">
                   
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DurationMinutes)
                </dt>
                <dd class="col-sm-10" style="text-align:center">
                   
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ReleaseDate)
                </dt>
                <dd class="col-sm-10" style="text-align:center">
                   
                </dd>
            }
        </dl>
        <form asp-action="Delete" style="position:fixed;bottom:-10%;left:40%;transform:translate(-50%,0)">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
        <a class="btn btn-info buton_log_in" style="position:fixed;bottom:-10%;left:60%;transform:translate(-50%,0);color:white" asp-action="Index">Back to Movies</a>
    
    </div>
</div>
