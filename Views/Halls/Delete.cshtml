@model CinemaBooking.Models.DBObjects.Hall

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="background"></div>
<div class="tile" style="height:60%;top:50%;transform:translate(-50%,-50%)">

    <h1 style="left:50%;transform:translate(-50%,0);position:absolute;color:white">Delete</h1>
    <br /><br />
    <h3 style="left:50%;transform:translate(-50%,0);position:absolute;color:white;width:max-content">Are you sure you want to delete this?</h3>
    <div style="top:35%;left:50%;transform:translate(-50%,0);position:absolute;width:60%;height:30%">

        <dl class="row" style="width:70%;position:fixed;left:50%;transform:translate(-50%,0)">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HallNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HallNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
    </dl>

        <form asp-action="Delete" style="position:fixed;bottom:-10%;left:50%;transform:translate(-50%,0)">
        <input type="hidden" asp-for="HallId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
</div>