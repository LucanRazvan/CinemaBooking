@model CinemaBooking.Models.DBObjects.Reservation


@{
    ViewData["Title"] = "InsertReservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="background"></div>
<div class="tile">

    <h1 style="position:absolute;left:50%;transform:translate(-50%,0);color:white">InsertReservation</h1>
    <br /><br />

<div class="row">
    <div class="col-md-4">
            <section style="position:absolute;left:50%;transform:translate(-50%,0);width:50%">
        <form asp-action="InsertReservation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ScreeningId" class="form-control" value="@ViewBag.ScreeningID" hidden />
            </div>
            <div class="form-group">
                        <label asp-for="NumberOfSeats" class="form-label" style="color:white"></label>
                <input asp-for="NumberOfSeats" class="form-control" />
                <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                        <input type="submit" value="Confirm the number of seats" class="btn btn-primary buton_log_in" style="left:50%;position:relative;transform:translate(-50%,0)" />
                        <br />
            </div>
        </form>
        </section>
            <a class="btn buton_log_in" asp-route-screeningId="@ViewBag.ScreeningIDcopy" asp-route-numberOfTickets="@ViewBag.NumberOfTickets" asp-route-reservationId="@ViewBag.ReservationID" asp-controller="ReservedSeats" asp-action="Index" style="visibility:@(ViewBag.ShowButtonReservedSeats == true ? "visible" : "hidden");left:50%;top:50%;position:absolute;transform:translate(-50%,0);color:white">Choose the seat number</a>
    </div>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
