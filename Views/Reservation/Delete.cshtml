@model CinemaBooking.Models.DBObjects.Reservation

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="background"></div>
<div class="tile" style="height:90%;top:10%;width:50%">

    <h1 style="left:50%;transform:translate(-50%,0);position:absolute;color:white">Delete</h1>
    <br /><br />
    <h3 style="left:50%;transform:translate(-50%,0);position:absolute;color:white;width:max-content">Are you sure you want to delete this?</h3>
    <div style="top:15%;left:50%;transform:translate(-50%,0);position:absolute;width:80%;height:70%">
        <dl class="row" style="width:90%;position:fixed;left:50%;transform:translate(-50%,0)">
        <dd class="col-sm-12" style="text-align:center">
            @Html.DisplayFor(model => model.Screening.Movie.Title)
        </dd>
        <dd class="col-sm-12" style="text-align:center">
           <img src="@Model.Screening.Movie.ImgURL" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfSeats)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfSeats)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Screening.ScreeningTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Screening.ScreeningTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Screening.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Screening.Price)
        </dd>
    </dl>

        <form asp-action="Delete" style="position:fixed;bottom:-10%;left:50%;transform:translate(-50%,0)">
        <input type="hidden" asp-for="ReservationId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    </div>
</div>
